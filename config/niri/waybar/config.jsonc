// -*- mode: jsonc -*-
{
    "height": 30,
    "spacing": 6,
    "modules-left": [
        "niri/workspaces",
        "niri/window",
        "custom/media",
        "custom/cava_mviz"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "custom/clipboard",
        "network",
        "cpu",
        "memory",
        "temperature",
        "pulseaudio",
        "custom/bluetooth_battery",
        "battery"
    ],
    "niri/workspaces" : {
      "show-special": true
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%d ~ %I:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%A, %d %B %Y}",
        "on-click-right": "swaync-client -t"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"],
        "tooltip": false
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
        "format-ethernet": "{ipaddr}/{cidr} ÓΩÑ ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP) Ôì¥ ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "0% Óª®  {icon}Ôäî",
        "format-muted": "0% Óª®",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 30,
        "format-icons": {
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/niri/waybar/mediaplayer.py 2> /dev/null"
    },
    "custom/cava_mviz": {
      "exec": "$HOME/.config/niri/waybar/cava.sh",
      "format": "{}",
      "tooltip": false
    },
    "custom/bluetooth_battery": {
      "format": "Û∞•â {}",
      "tooltip": false,
      "exec": "$HOME/.config/niri/waybar/bluetooth_battery.sh"
    },
    "niri/window": {
      "format": "{app_id}",
      "icon": true,
      "icon-size": 20,
      "tooltip": false,
      "on-click-middle": "niri msg action close-window"
    },
    "custom/clipboard": {
      "format": "ÔÅø",
      "tooltip-format": "Clipboard history\nLMB = pick\nRMB = clear\nMMB = clear all",
      "on-click": "foot -e $HOME/.config/niri/scripts/clipboard_pick.sh",
      "on-click-right": "foot -e $HOME/.config/niri/scripts/clipboard_clear.sh",
      "on-click-middle": "clipman clear -a"
    }
  }
}
